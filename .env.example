# =============================================
# AXIS ABA - Environment Variables
# =============================================
# Copie este arquivo para .env e preencha os valores

# PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=axis
DATABASE_PASSWORD=
DATABASE_NAME=axis_tcc
DATABASE_MAX_CONNECTIONS=10
DATABASE_IDLE_TIMEOUT_MS=30000
DATABASE_CONNECTION_TIMEOUT_MS=5000

# Tenant padrão (usado apenas pela rota /api/demo)
DEFAULT_TENANT_ID=

# Google Calendar Integration (Bible S19 — Bidirecional)
# Mesmas credenciais Google Cloud para TCC e ABA
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://axistcc.com/api/google/callback
GOOGLE_REDIRECT_URI_ABA=https://axistcc.com/api/aba/google/callback
GOOGLE_WEBHOOK_URL_ABA=https://axistcc.com/api/aba/google/webhook
NEXT_PUBLIC_APP_URL=https://axistcc.com

# Redis (cache — TTL padrão 5 min)
REDIS_URL=redis://localhost:6379

# Cron Secret (renovação automática de webhooks — 7 dias)
CRON_SECRET=
